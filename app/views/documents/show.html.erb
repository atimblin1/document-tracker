<div class="max-w-5xl mx-auto">
  <div class="mb-6">
    <%= link_to "← Back to Documents", documents_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
  </div>
  
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-4 md:p-6 border-b border-gray-200">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4 mb-4">
        <div class="flex-1">
          <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2"><%= @document.title %></h1>
          
          <div class="flex flex-wrap gap-2 items-center mb-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= status_badge_class(@document.status) %>">
              <%= @document.status.titleize %>
            </span>
            
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <%= @document.doc_type.titleize %>
            </span>
            
            <span class="text-sm text-gray-500">
              Uploaded <%= @document.created_at.strftime("%B %d, %Y") %>
            </span>
          </div>
          
          <% if @document.description.present? %>
            <p class="text-gray-700 leading-relaxed"><%= @document.description %></p>
          <% end %>
        </div>
        
        <% unless demo_mode? %>
          <div class="flex md:flex-col gap-2 w-full md:w-auto md:ml-6">
            <%= link_to "Edit", edit_document_path(@document), class: "flex-1 md:flex-none px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition text-center" %>
            <%= button_to "Delete", document_path(@document), method: :delete, data: { confirm: "Are you sure?" }, class: "flex-1 md:flex-none px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 transition" %>
          </div>
        <% end %>
      </div>
      
      <!-- Tags Section -->
      <div class="mt-6 pt-6 border-t border-gray-200">
        <h3 class="text-sm font-semibold text-gray-900 mb-3">Tags</h3>
        
        <div class="flex flex-wrap gap-2 mb-4">
          <% if @document.tags.any? %>
            <% @document.tags.each do |tag| %>
              <span class="inline-flex items-center gap-2 px-3 py-1 rounded text-sm font-medium bg-blue-50 text-blue-700 border border-blue-200">
                #<%= tag.name %>
                <% unless demo_mode? %>
                  <%= button_to "×", document_document_tag_path(@document, tag), method: :delete, class: "text-blue-700 hover:text-blue-900 font-bold text-lg leading-none", form: { class: "inline" } %>
                <% end %>
              </span>
            <% end %>
          <% else %>
            <p class="text-sm text-gray-500">No tags yet</p>
          <% end %>
        </div>
        
        <% unless demo_mode? %>
          <%= form_with url: document_document_tags_path(@document), method: :post, class: "flex flex-col sm:flex-row gap-2" do |f| %>
            <%= f.text_field :tag_name, placeholder: "Add a tag...", class: "flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" %>
            <%= f.submit "Add Tag", class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition cursor-pointer" %>
          <% end %>
        <% end %>
      </div>
    </div>
    
    <!-- PDF Viewer -->
    <div class="p-4 md:p-6 bg-gray-50">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Document Preview</h3>
        <%= link_to "Download PDF", rails_blob_path(@document.file, disposition: "attachment"), class: "px-4 py-2 bg-gray-600 text-white text-sm font-medium rounded-md hover:bg-gray-700 transition text-center", target: "_blank" %>
      </div>
      
      <% if @document.file.attached? %>
        <div class="bg-white rounded-lg border border-gray-300 overflow-hidden" style="height: 400px; md:height: 600px;">
          <iframe src="<%= rails_blob_path(@document.file, disposition: "inline") %>" type="application/pdf" class="w-full h-full border-0">
            <p class="p-8 text-center text-gray-600">
              Your browser doesn't support PDF preview. 
              <%= link_to "Download the PDF", rails_blob_path(@document.file, disposition: "attachment"), class: "text-blue-600 hover:underline" %> 
              to view it.
            </p>
          </iframe>
        </div>
      <% else %>
        <p class="text-gray-600 text-center py-8">No file attached.</p>
      <% end %>
    </div>
  </div>
</div>
